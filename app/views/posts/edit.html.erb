<div>
  <div class="">
    <h1>編集</h1>
  </div>
  <div class="">
    <%= notice %>
  </div>
  <div class="post_table">
    <%= form_with(model:@post, local:true) do |form| %>
    <% if @post.errors.any? %>
    <div>
      <ul class="error_messages">
        <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <div class="">
      <%= form.text_field :content %>
    </div>
    <div class="">
      <%= form.submit "更新" %>
    </div>
    <% end %>
  </div>
  <%= render 'index' %>
</div>
