<%= form_with(model:@post, url:choose_index_or_edit, local:true) do |form| %>
  <% if @post.errors.any? %>
  <div>
    <ul class="error_messages">
      <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div class="">
    <%= form.text_field :content %>
  </div>
  <div class="">
    <%= form.submit "投稿" %>
  </div>
<% end %>
